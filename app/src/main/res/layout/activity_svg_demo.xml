<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fierydevs.androidexperiments.svgdemo.SvgDemoActivity">

    <com.fierydevs.androidexperiments.svgdemo.utils.PlayPauseImageView
        android:id="@+id/svg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/play_to_pause_animation"/>


    <com.fierydevs.androidexperiments.svgdemo.utils.SmilingSadFaceImageView
        android:id="@+id/svg_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smiling_to_sad"
        android:layout_toRightOf="@id/svg"/>

</RelativeLayout>
